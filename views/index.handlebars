<div class="container">
    <div class="jumbotron text-center" style="background-color:#FBF8C1">
  <div class="row">
    <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead"><strong>New Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="burger btn btn-warning" id ="eatButton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-cutlery">Devour</span></button>
                                <hr>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div> 
    <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="deleteburger btn btn-danger" id ="deleteButton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-trash">Delete</span></button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div> 
    </div>
    </div>
  </div>